TARGETCFLAGS=
endif
ifeq ("$(TARGET)", "gg")
TARGETM:=z80
TARGETAS:=z80
TARGETLD:=z80
TARGETLIB=gg
TARGETEXT=gg
TARGETCFLAGS=
endif

CPP=$(SDCCBIN)sdcpp
CC=$(SDCCBIN)sdcc
AR=$(SDCCBIN)sdar
